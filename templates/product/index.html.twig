{% extends 'base.html.twig' %}

{% block title %}Les Petits Domaines{% endblock %}

{% block content %}
    <h1>Nos produits</h1>

    <div class="row">
        {% for product in products %}
            <div class="col-md-4">
                <div class="product-item" text="center">
                    <a href="{{ path('app_product', { 'slug' : product.slug })}}">
                        <img src="/illustrations/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
                    </a>
                    <h5>{{ product.name }}</h5>
                    <span class="product-subtitle">{{ product.subTitle }}</span>
                    <span class="product-price">{{ (product.price / 100)|number_format(2, ',','.') }} â‚¬</span>
                </div>
        {# {{ dump(product)}} #}
            </div>
        {% endfor %}
    </div>


{% endblock %}
