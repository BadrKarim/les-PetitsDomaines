{% extends 'base.html.twig' %}

{% block title %}Ma commande - Les Petits Domaines{% endblock %}

{% block content %}

	<h1>Je passe ma commande</h1>
	<p>Choisissez vos préferences avant de passer votre commande sur les petits domaines</p>

	<hr>

	<div class="row">
		<div
			class="col-md-6">
			{# {{ dump(formOrder) }} #}
			{% set formhtml %}

                {{ form_start(formOrder) }}

                {{ form_label(formOrder.addresses, 'Choisissez votre adresse de livraison')}}

                <a hrf="{{ path('add_address')}}">Ou ajouter une nouvelle adresse</a>

                {{ form_end(formOrder) }}

			{% endset %}

			{{ formhtml|replace({'[br]' : '<br/>'})|raw }}
			{# {{ form_raw(formOrder.addresses)|replace({'[br]' : '<br/>'})|raw}} #}
		</div>
		<div class="col-md-6">
			<div class="text-center">
				<b>Récapulatif de ma commande</b><br/>
				<p>Retrouvez l'ensemble de vos produits</p>
			</div>
			{# {{ dump(cart) }} #}
			<div class="order-summary">

				{% for key, product in cart %}
					<div class="row {% if key > 0 %} m-t2 {% endif %}">
						<div class="col-2">
							<img src="/illustrations/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="75px">
						</div>
						<div class="col-8 my-auto">
							{{ product.product.name }}<br />
							<small>{{ product.product.subtitle }}</small>
						</div>
						<div class="col-2 my-auto">
							x{{ product.quantity }}
						</div>
					</div>
				{% endfor %}

			</div>
		</div>
	</div>

{% endblock %}
