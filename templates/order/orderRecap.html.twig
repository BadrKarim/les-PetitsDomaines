{% extends 'base.html.twig' %}

{% block javascripts %}

    <script src="https://js.stripe.com/v3/"></script>

{% endblock %}

{% block title %}Paiment de ma commande - Les Petits Domaines{% endblock %}

{% block content %}

	<h1>Je valide ma commande</h1>
	<p>Veuillez vérifier vos informations avant de passer au paiement</p>

	<hr>

	<div class="row">
		<div class="col-md-6">
			<strong>mon adresse de livraison</strong><br/>
			<div class="form-check">
                {# {{ dump(delivery) }}  #}
				 {{ order.delivery|raw }}<br/>
			</div>

			<hr>
   
			<strong>mon transporteur</strong>
			{# {{ dump(carrier) }} #}
            <div class="form-check">
                 {{ order.carrierName }}<br/>
              
                {{ order.carrierPrice|number_format(2, ',', '.') }} € 
            </div>
	    </div>
        <div class="col-md-6">
            <div class="text-center">
                <b>Ma commande</b><br/>
                <p>Retrouvez l'ensemble de vos produits</p>
            </div>
            {# {{ dump(cart) }} #}
            <div class="order-summary">

                {% set total = null %}
                {% for key, product in cart %}
                    {# {{ dump(product) }} #}
                    <div class="row {% if key > 0 %} m-t2 {% endif %}">
                        <div class="col-2">
                            <img src=" /illustrations/{{ product.product.illustration }} " alt=" {{ product.product.name }} " height="75px">
                        </div>
                        <div class="col-8 my-auto">
                            {{ product.product.name }}<br />
                            <small>
                                {{ product.product.subtitle }}
                                <br />
                                x {{ product.quantity }}
                            </small>
                        </div>
                        <div class"col-2 my-auto">
                            {{ ((product.product.price * product.quantity) / 100)|number_format(2, ',','.') }} €
                        </div>
                    </div>
                    {% set total = total + (product.product.price * product.quantity) %}
                {% endfor %}
            </div>
                
                <hr>

            <div>
                <strong>Sous-Total :</strong>{{ (total / 100)|number_format(2, ',','.') }} €<br />
                {# {{ dump(carrier) }} #}
                <strong>Livraison :</strong>{{ (order.carrierPrice)|number_format(2, ',','.') }} €

                <hr>

                <strong>Total :</strong>{{ ((total / 100) + order.carrierPrice)|number_format(2, ',','.') }} €
                <a class="btn btn-success btn-block mt-3" id="checkout-button">Payer | {{ ((total / 100) + order.carrierPrice)|number_format(2, ',','.') }} €</a>
            </div>
        </div>
    </div>

    {% endblock %}

    {% block script %}
    <script type="text/javascript">
 
        var stripe = Stripe('');
        //console.log(stripe);
        var checkoutButton = document.getElementById("checkout-button");
        checkoutButton.addEventListener("click", function () {
            
            fetch("/commande/stripe-session/{{ reference }}", {
                method: "POST",
            })
            
                .then(function (response) {
                    //console.log(response);
                    return response.json();
                })
                 .then(function (session) {
                    //console.log(stripe);
                        //console.log(session);
                        if (session.error == 'order'){
                            window.location.replace('{{ path('order')}}');
                        }else {
                            return stripe.redirectToCheckout({ sessionId: session.id});
                        }
                        
                        //console.log(redirectToCheckout);
                    
                     
                 })
                 .then(function (result) {
                    //console.log(fetch);
 
                     if (result.error) {
                         alert(result.error.message);
                     }
                 })
                  .catch(function (error) {
                      console.error("Error", error);
                  })
        })
 
    </script>
{% endblock %}




